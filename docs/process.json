{
  "apps": [
    {
      "name": "nativescript-app-sync-server",
      "max_memory_restart": "300M",
      "script": "/path/to/nativescript-app-sync-server/bin/www",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "CONFIG_FILE": "/path/to/production/config.js"
      }
    }
  ]
}