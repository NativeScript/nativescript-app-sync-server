{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": [
        "src/**/*"
, "test"    ]
}